{
    "compilerOptions": {
        "outDir": "types",
        "sourceMap": false,
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "allowJs": false,
        "strict": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "lib": [
            "es6",
            "dom"
        ],
        "rootDir":"."
    },
    "include": [
        "src"
    ]
}